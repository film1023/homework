#include <stdio.h>

void printArray(int arr[], int size) {
    int i;
    for (i = 0; i < size; i++) {
        printf("%d", arr[i]);
        if (i < size - 1) {
            printf(", ");
        }
    }
    printf("\n");
}
int main() {
    int series[] = {15, 7, 25, 3, 73, 32, 45};
    int n = sizeof(series) / sizeof(series[0]);
    int target_value = 32;
    int pos_of_32 = -1;
    printf("Old Series : ");
    printArray(series, n);
    int i, j, temp;
    for (i = 0; i < n - 1; i++) {
        for (j = 0; j < n - i - 1; j++) {
            if (series[j] > series[j + 1]) {
                temp = series[j];
                series[j] = series[j + 1];
                series[j + 1] = temp;
            }
        }
    }
    printf("New Series : ");
    printArray(series, n);
    for (i = 0; i < n; i++) {
        if (series[i] == target_value) {
            pos_of_32 = i ; 
            break; 
        }
    }
    if (pos_of_32 != -1) {
        printf("Pos of %d: %d\n", target_value, pos_of_32);
    } else {
        printf("Pos of %d: Not Found\n", target_value);
    }
    return 0;
}
