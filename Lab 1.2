#include <stdio.h>

int main() {
    char Name[50];
    int Age = 0;
    
    printf("Enter your name: ");
    scanf("%s", Name); // Note: scanf("%s", ...) is used to read a single word/token as input.
    
    printf("Enter your age: ");
    scanf("%d", &Age);
    
    printf("--- - - - --\n");
    printf("Hello %s \n", Name); 
    printf("Age = %d\n", Age);
    return 0; // Standard practice to indicate successful execution
}
